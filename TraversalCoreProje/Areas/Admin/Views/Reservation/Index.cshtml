@model List<EntityLayer.Concrete.Reservation>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Onay Bekleyen Rezervasyonlar</h1>
<table class="table table-bordered">
    <tr>
        <td>ID</td>
        <td>Kişi Sayısı</td>
        <td>Rezervasyon Tarihi</td>
        <td>İstek</td>
        <td>Durum</td>
        <td>Onayla</td>
        <td>İptal Et</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ReservationID</td>
            <td>@item.PersonCount</td>
            <td>@DateTime.Parse(item.ReservationDate.ToString()).ToShortDateString()</td>
            <td>@item.Description</td>
            <td>@item.Status</td>
            <td><a asp-controller="Reservation" asp-action="Approve" asp-route-id="@item.ReservationID" class="btn btn-outline-success">Onayla</a></td>
            <td><a asp-controller="Reservation" asp-action="Cancel" asp-route-id="@item.ReservationID" class="btn btn-outline-danger">İptal et</a></td>
        </tr>
    }
</table>


