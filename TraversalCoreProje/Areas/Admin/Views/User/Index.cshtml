@model List<TraversalCoreProje.Areas.Admin.Models.Admin.User.UserViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kullanıcı Listesi</h1>
<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Mail Adresi</th>
            <th>Kullanıcı Adı</th>
            <th>Telefon Numarası</th>
            <th>Cinsiyeti</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Yorumlar</th>
            <th>Tur Geçmişi</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Mail</td>
                <td>@item.UserName</td>
                <td>@item.Phone</td>
                <td>@item.Gender</td>
                <td><a asp-controller="User" asp-action="DeleteUser" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a></td>
                <td><a asp-controller="User" asp-action="UpdateUser" asp-route-id="@item.Id" class="btn btn-outline-warning">Güncelle</a></td>
                <td><a asp-controller="User" asp-action="CommentUser" asp-route-id="@item.Id" class="btn btn-outline-dark">Yorum</a></td>
                <td><a asp-controller="User" asp-action="DestinationUser" asp-route-id="@item.Id" class="btn btn-outline-info">Tur Geçmişi</a></td>
            </tr>
        }
    </table>
</div>

