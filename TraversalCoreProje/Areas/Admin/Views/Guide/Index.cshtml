@model List<EntityLayer.Concrete.Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rehber Listesi</h1>
<div class="container">
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Görsel</th>
            <th>Ad Soyad</th>
            <th>Açıklama</th>
            <th>Durum</th>
            <th>Düzenle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.GuideID</td>
                <td><img src="@item.Image" width="70" height="70" style="border-radius:initial;" /></td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    @if (item.Status == true)
                    {
                        <a asp-controller="Guide" asp-action="Pasif" asp-route-id="@item.GuideID" class="btn btn-outline-danger">Pasif Yap</a>
                    }
                    else
                    {
                        <a asp-controller="Guide" asp-action="Aktif" asp-route-id="@item.GuideID" class="btn btn-outline-dark">Aktif Yap</a>
                    }
                </td>
                <td><a asp-controller="Guide" asp-action="EditGuide" asp-route-id="@item.GuideID" class="btn btn-outline-warning">Düzenle</a></td>
            </tr>
        }
    </table>
    <br />
    <a asp-controller="Guide" asp-action="AddGuide" class="btn btn-outline-success">Ekle</a>
</div>

