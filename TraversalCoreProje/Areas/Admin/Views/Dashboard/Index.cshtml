
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-lg-8 mb-4 order-0">
            <div class="card">
                <div class="d-flex align-items-end row">
                    <div class="col-sm-7">
                        <div class="card-body">
                            <h5 class="card-title text-primary">Tebrikler Admin! 🎉</h5>
                            <p class="mb-4">
                                Büyüme Oranınız <span class="fw-bold">72%</span> Son 10 günde profilinize 1000 kişi görüntüledi
                            </p>

                            <a href="javascript:;" class="btn btn-sm btn-outline-primary">Siteye Git</a>
                        </div>
                    </div>
                    <div class="col-sm-5 text-center text-sm-left">
                        <div class="card-body pb-0 px-0 px-md-4">
                            <img src="~/sneat-1.0.0/assets/img/illustrations/man-with-laptop-light.png"
                                 height="140"
                                 alt="View Badge User"
                                 data-app-dark-img="/sneat-1.0.0/illustrations/man-with-laptop-dark.png"
                                 data-app-light-img="/sneat-1.0.0/illustrations/man-with-laptop-light.png" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

       @await Component.InvokeAsync("_Card1Statistic")
        <!-- Total Revenue -->
        @await Component.InvokeAsync("_TotalRevenue")
        <!--/ Total Revenue -->
        @await Component.InvokeAsync("_Card2Statistic")
    </div>
    <div class="row">
        <!-- Order Statistics -->
        @await Component.InvokeAsync("_DestinationStatistic")
        <!--/ Order Statistics -->
        <!-- Expense Overview -->
        @await Component.InvokeAsync("_Destination2Statistic")
        <!--/ Expense Overview -->
        <!-- Transactions -->
        @await Component.InvokeAsync("_AdminGuideList")
        <!--/ Transactions -->
    </div>
</div>

