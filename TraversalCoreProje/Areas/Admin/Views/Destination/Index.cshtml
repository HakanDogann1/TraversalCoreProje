@model List<EntityLayer.Concrete.Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tur Rotaları</h1>

<div class="container"> 
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Şehir</th>
            <th>Tatil Süresi</th>
            <th>Fiyat</th>
            <th>Resim</th>
            <th>İçerik</th>
            <th>Kapasite</th>
            <th>Sitede Gör</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DestinationID</td>
                <td>@item.City</td>
                <td>@item.DayNight</td>
                <td>@item.Price ₺</td>
                <td>@item.Image</td>
                <td>@item.Description</td>
                <td>@item.Capasity</td>
                <td><a href="/Default/Index/" class="btn btn-outline-dark">Sitede Gör</a></td>
                <td><a asp-controller="Destination" asp-action="DeleteDestination" asp-route-id="@item.DestinationID" class="btn btn-outline-danger">Sil</a></td>
                <td><a asp-controller="Destination" asp-action="UpdateDestination" asp-route-id="@item.DestinationID"  class="btn btn-outline-warning">Güncelle</a></td>
                <td><a asp-controller="Destination" asp-action="DestinationDetails" asp-route-id="@item.DestinationID" class="btn btn-outline-info">Detaylar</a></td>
            </tr>
        }
    </table>
    <br />
    <br />
    <a href="/Admin/Destination/AddDestination/" class="btn btn-outline-success">Ekle</a>
</div>

