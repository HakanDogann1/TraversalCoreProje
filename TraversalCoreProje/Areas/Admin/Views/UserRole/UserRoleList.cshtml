@model List<TraversalCoreProje.Areas.Admin.Models.Role.RoleAssignViewModel>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <h1> Rol Atama Listesi</h1>
    <form method="post">
        @for(int i = 0; i < Model.Count; i++)
        {
            <div class="form-check">
                <input type="hidden" asp-for="@Model[i].RoleId"/>
                <input type="hidden" asp-for="@Model[i].RoleName"/>
                <input type="checkbox" asp-for="@Model[i].Exist" class="form-check-input"/>
                <label class="form-check-label" for="@Model[i].Exist">
                    @Model[i].RoleName
                </label>
            </div>
        }
        <br />
        <button class="btn btn-outline-success">Değişiklikleri kaydet</button>
    </form>

</div>

