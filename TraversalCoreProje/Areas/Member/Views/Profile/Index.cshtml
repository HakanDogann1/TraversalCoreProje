@model ProfileViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div>
            <label>Ad</label>
            <input type="text" class="form-control" asp-for="Name"/>
        </div>
        <div>
            <label>Soyad</label>
            <input type="text" class="form-control" asp-for="Surname"/>
        </div>
        <div>
            <label>Kullanıcı Adı</label>
            <input type="text" class="form-control" asp-for="Username"/>
        </div>
        <div>
            <label>Mail</label>
            <input type="text" class="form-control" asp-for="Email"/>
        </div>
        <div>
            <label>Telefon</label>
            <input type="text" class="form-control" asp-for="Phone" />
        </div>
        <div>
            <label>Cinsiyet</label>
            <input type="text" class="form-control" asp-for="Gender"/>
        </div>
        <div class="form-group">
            <label asp-for="Image">Resim</label>
            <input type="file" class="form-control" asp-for="Image"/>
        </div>
        <br />

        
        <button class="btn btn-outline-success">Kaydet</button>
    </form>
</div>

